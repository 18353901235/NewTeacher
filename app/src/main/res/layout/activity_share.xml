<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_pop_layout"
        android:background="@color/colorWhite"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:text="分享到" />

    <LinearLayout
        android:id="@+id/ll_pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_share">

            <LinearLayout
                android:id="@+id/ll_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/base_white_selector"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_8">

                <ImageView
                    android:id="@+id/iv_share_wx"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="@dimen/margin_8"
                    android:src="@mipmap/trip_content_weixin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="微信"
                    android:textColor="@color/blacktext" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wx_pyq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/base_white_selector"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_8">

                <ImageView
                    android:id="@+id/iv_share_wx_pyq"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="@dimen/margin_8"
                    android:src="@mipmap/trip_content_weixin02" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="朋友圈"
                    android:textColor="@color/blacktext" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/base_white_selector"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_8">

                <ImageView
                    android:id="@+id/iv_share_qq"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="@dimen/margin_8"
                    android:src="@mipmap/trip_content_qq" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="QQ"
                    android:textColor="@color/blacktext" />
            </LinearLayout>
            <!--</LinearLayout>-->
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="@dimen/common_margin_8"-->
            <!--android:layout_above="@+id/tv_share">-->
            <LinearLayout
                android:id="@+id/ll_qzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/base_white_selector"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_8">

                <ImageView
                    android:id="@+id/iv_share_qzone"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="@dimen/margin_8"
                    android:src="@mipmap/trip_content_qq02" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="QQ空间"
                    android:textColor="@color/blacktext" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="@drawable/base_grey_selector"
            android:gravity="center"
            android:padding="@dimen/margin_8"
            android:text="取消"
            android:textColor="@color/TextBlack"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>